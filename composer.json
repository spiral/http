{
    "name": "spiral/http",
    "type": "library",
    "description": "HTTP Request pipeline",
    "license": "MIT",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/framework/issues",
        "source": "https://github.com/spiral/http"
    },
    "authors": [
        {
            "name": "Anton Titov (wolfy-j)",
            "email": "wolfy-j@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "spiral/core": "^2.15",
        "spiral/files": "^2.15",
        "spiral/streams": "^2.15",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "symfony/polyfill-php80": "^1.22"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.5",
        "mockery/mockery": "^1.5",
        "laminas/laminas-diactoros": "^2.8",
        "nyholm/psr7": "^1.5.0"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Http\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Http\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.15.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
